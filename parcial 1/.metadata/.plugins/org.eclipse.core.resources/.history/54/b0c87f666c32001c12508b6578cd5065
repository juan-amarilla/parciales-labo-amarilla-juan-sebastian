#include "OtrasFunciones.h"

void mensajeEstado(int estado, char mensaje[], char error[])
{
	if(estado == 1)
	{
	  printf("%s", mensaje);
	}

	else
	{
		if(estado == 0)
		{
			printf("%s", error);
		}

		else
		{
			printf("%s", error);
		}
	}
}

