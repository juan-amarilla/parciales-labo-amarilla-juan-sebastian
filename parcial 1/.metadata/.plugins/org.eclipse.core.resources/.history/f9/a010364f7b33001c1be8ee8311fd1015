#include "OtrasFunciones.h"

void mensajeEstado(int estado, char valido[], char errorProceso[], char noValido[])
{
	if(estado == 1)
	{
	  printf("%s", valido);
	}

	else
	{
		if(estado == 0)
		{
			printf("%s", errorProceso);
		}

		else
		{
			printf("%s", noValido);
		}
	}
}

