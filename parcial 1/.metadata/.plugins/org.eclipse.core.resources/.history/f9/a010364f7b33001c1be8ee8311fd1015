}

int buscarLibre(int estado)
{
	int retorno;

	retorno = VACIO;

	if(estado == OCUPADO)
	{
		retorno = OCUPADO;
	}

	return retorno;

}

void mayusculasAutomaticos(char cadena[], int tam)
{
     int i;

	 for(i=0;i<tam;i++)
	 {

         if(isspace(cadena[i]) != 0)
		 {
        	 cadena[i+1]= toupper(cadena[i+1]);

		 }
	 }
}
