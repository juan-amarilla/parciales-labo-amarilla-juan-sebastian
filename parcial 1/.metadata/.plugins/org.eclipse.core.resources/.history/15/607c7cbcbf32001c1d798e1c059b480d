#include "Validaciones.h"

int validarNumeroEntero(int* numeroEntero, char numero[])
{
	int i;
	int validacion;
	int entero;

	i = 0;
	validacion = 1;

	while (numero[i] != '\0')
	{
		if(isdigit(numero[i]) != 1)
		{
			validacion=0;
			break;
		}

		i++;

	}

	if(validacion==1)
	{
		entero=atoi(numero);
		*numeroEntero=entero;

	}


	return validacion;
}

int validarCuit(char cadena[], char cuit[])
{
	int retorno;
	int i;

	retorno = 1;
	i = 0;

	while(cadena[i]!='\0')
	{
	   if(isdigit(cadena[i]) != 1)
	   {
		     retorno=0;
			 break;
	   }

	   if((i == 2  && cadena[i] == '-') || (i == 11 && cadena[i] == '-'))
	   {
		   //12-12345678-1
		   cadena[i] = '-';

	   }

	   i++;

	}

	if(retorno==1)
	{
	   strcpy(cuit, cadena);

	}

	return retorno;

}
