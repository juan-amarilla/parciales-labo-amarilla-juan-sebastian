void pedirCadenaValidado(char cadena[], char mensaje[], char cadenaValidado[])
{
	int estado;

    printf("%s", mensaje);
    fflush(stdin);
    gets(cadena);

    estado = validarAlfaNumerico(cadenaValidado, cadena);

    while(estado == 0 || strlen(cadena) == 0)
    {
    	printf("Error: %s", mensaje);
    	fflush(stdin);
    	gets(cadena);
    	estado = validarAlfaNumerico(cadenaValidado, cadena);
    }
}
